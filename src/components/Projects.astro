<section id="projects" class="min-h-screen flex items-center justify-center px-6 py-20">
  <div class="max-w-4xl w-full">
    <h2 class="text-4xl md:text-5xl font-bold mb-12 text-[var(--text-primary)]">
      Projects
    </h2>

    <div class="space-y-12">
      <!-- Sake -->
      <div class="border-l-4 border-[var(--accent)] pl-6 py-4 bg-[var(--bg-secondary)] -ml-6 pr-6 rounded-r-lg">
        <h3 class="text-2xl font-bold text-[var(--text-primary)] mb-3">
          Sake
        </h3>
        <p class="text-lg text-[var(--text-secondary)] mb-4 leading-relaxed">
          A lightweight, high-performance web framework for Navi. Built with a focus on
          simplicity, speed, and developer experience.
        </p>
        <div class="flex flex-wrap gap-4">
          <a
            href="https://ryancooper-dev.github.io/sake-navi/"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-[var(--accent)] hover:text-[var(--accent-hover)] transition-colors font-medium"
          >
            Documentation →
          </a>
          <a
            href="https://github.com/ryancooper-dev/sake-navi"
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center text-[var(--accent)] hover:text-[var(--accent-hover)] transition-colors font-medium"
          >
            GitHub →
          </a>
        </div>
      </div>

      <!-- Agentries -->
      <div class="border-l-4 border-[var(--text-secondary)] pl-6 py-4 bg-[var(--bg-secondary)] -ml-6 pr-6 rounded-r-lg">
        <div class="flex items-center gap-3 mb-3">
          <h3 class="text-2xl font-bold text-[var(--text-primary)]">
            Agentries
          </h3>
          <span class="text-sm px-3 py-1 bg-[var(--bg-primary)] border border-[var(--text-secondary)] rounded-full text-[var(--text-secondary)]">
            Private
          </span>
        </div>
        <p class="text-lg text-[var(--text-secondary)] leading-relaxed">
          AI agent infrastructure project built in Rust. Focused on creating robust,
          efficient, and scalable systems for autonomous agent deployment and management.
        </p>
      </div>
    </div>
  </div>
</section>
