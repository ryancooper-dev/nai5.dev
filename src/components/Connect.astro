---

<section id="connect" class="relative py-40 md:py-56 px-6 border-t-4 border-[var(--accent)] bg-[var(--bg-secondary)]">
  <!-- Large section number watermark -->
  <div class="absolute top-8 left-6 text-[12rem] md:text-[16rem] font-bold opacity-5 pointer-events-none select-none mono">04</div>

  <div class="max-w-6xl mx-auto relative z-10">
    <!-- Section header -->
    <div class="mb-24 md:mb-32">
      <div class="flex items-center gap-6 mb-6">
        <span class="mono text-sm text-[var(--accent)] uppercase tracking-wider bg-[var(--accent)] text-[var(--bg-primary)] px-3 py-1">[04]</span>
        <h2 class="text-5xl md:text-6xl font-bold text-[var(--text-primary)]">CONNECT</h2>
      </div>
      <div class="h-[4px] w-32 bg-[var(--accent)]"></div>
    </div>

    <div class="grid md:grid-cols-2 gap-20 md:gap-24">
      <!-- Left: CTA -->
      <div class="space-y-8">
        <p class="text-2xl md:text-3xl text-[var(--text-secondary)] font-light leading-relaxed">
          Let's build something <span class="text-[var(--accent)]">exceptional</span> together.
        </p>
        <p class="text-lg text-[var(--text-tertiary)] leading-relaxed">
          Open to collaborations on AI infrastructure, system architecture,
          and innovative software projects. Available for consulting and speaking engagements.
        </p>

        <!-- Contact methods -->
        <div class="space-y-4 pt-8">
          <div class="flex items-center gap-4">
            <div class="w-8 h-8 flex items-center justify-center border border-[var(--border)]">
              <div class="w-2 h-2 bg-[var(--accent)]"></div>
            </div>
            <div>
              <div class="mono text-xs text-[var(--text-tertiary)] uppercase tracking-wider">Response Time</div>
              <div class="text-[var(--text-secondary)]">Within 24-48 hours</div>
            </div>
          </div>
          <div class="flex items-center gap-4">
            <div class="w-8 h-8 flex items-center justify-center border border-[var(--border)]">
              <div class="w-2 h-2 bg-[var(--accent)]"></div>
            </div>
            <div>
              <div class="mono text-xs text-[var(--text-tertiary)] uppercase tracking-wider">Availability</div>
              <div class="text-[var(--text-secondary)]">Open to new opportunities</div>
            </div>
          </div>
        </div>
      </div>

      <!-- Right: Social links -->
      <div class="space-y-4">
        <!-- X/Twitter -->
        <a href="https://x.com/RyanCooper8311" target="_blank"
           class="group flex items-center justify-between p-6 border-2 border-[var(--border)] bg-[var(--bg-primary)] hover:border-[var(--accent)] hover:bg-[var(--accent)] transition-all">
          <div class="flex items-center gap-4">
            <svg class="w-8 h-8 text-[var(--text-secondary)] group-hover:text-[var(--bg-primary)] transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
            <div>
              <div class="mono text-xs text-[var(--text-tertiary)] group-hover:text-[var(--bg-primary)] uppercase tracking-wider">X / Twitter</div>
              <div class="mono font-bold text-[var(--text-primary)] group-hover:text-[var(--bg-primary)]">@RyanCooper8311</div>
            </div>
          </div>
          <svg class="w-6 h-6 text-[var(--text-tertiary)] group-hover:text-[var(--bg-primary)] transform group-hover:translate-x-2 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>

        <!-- GitHub -->
        <a href="https://github.com/ryancooper-dev" target="_blank"
           class="group flex items-center justify-between p-6 border-2 border-[var(--border)] bg-[var(--bg-primary)] hover:border-[var(--accent)] hover:bg-[var(--accent)] transition-all">
          <div class="flex items-center gap-4">
            <svg class="w-8 h-8 text-[var(--text-secondary)] group-hover:text-[var(--bg-primary)] transition-colors" fill="currentColor" viewBox="0 0 24 24">
              <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
            </svg>
            <div>
              <div class="mono text-xs text-[var(--text-tertiary)] group-hover:text-[var(--bg-primary)] uppercase tracking-wider">GitHub</div>
              <div class="mono font-bold text-[var(--text-primary)] group-hover:text-[var(--bg-primary)]">ryancooper-dev</div>
            </div>
          </div>
          <svg class="w-6 h-6 text-[var(--text-tertiary)] group-hover:text-[var(--bg-primary)] transform group-hover:translate-x-2 transition-all" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7l5 5m0 0l-5 5m5-5H6"/>
          </svg>
        </a>

        <!-- Email (optional) -->
        <div class="p-6 border border-[var(--border)] bg-[var(--bg-tertiary)] mt-8">
          <p class="mono text-sm text-[var(--text-tertiary)]">
            Prefer email? Reach out via social media for contact information.
          </p>
        </div>
      </div>
    </div>
  </div>

  <!-- Footer -->
  <div class="max-w-6xl mx-auto mt-40 md:mt-48 pt-16 border-t border-[var(--border)]">
    <div class="flex flex-col md:flex-row justify-between items-center gap-6">
      <div class="mono text-sm text-[var(--text-tertiary)]">
        Â© 2026 Ryan Cooper. Built with Astro.
      </div>
      <div class="flex items-center gap-4">
        <div class="w-2 h-2 bg-[var(--accent)]"></div>
        <span class="mono text-sm text-[var(--text-tertiary)]">Designed with brutalist principles</span>
      </div>
    </div>
  </div>

  <!-- Large decorative element -->
  <div class="absolute bottom-0 right-0 w-96 h-96 border-l-2 border-t-2 border-[var(--border)] opacity-10 pointer-events-none"></div>
</section>
